.box
    .box-header.well(data-original-title)
        h2
            i.icon-edit
            span {{title}}
    .box-content(ng-hide="loading")
        .input-append
            input.span2(type='text',id='inputName', ng-model='city',placeholder='{{phCityName}}')
            button.btn.btn-primary(type="button",ng-click="getWeather(city)"){{search_T}}
        highchart(id='char1',config='chartConfig')
    div(ng-show="loading")
        img.ajax-loader(src="theme/img/ajax-loaders/ajax-loader-7.gif")
